<UserControl x:Class="Vts.SiteVisit.View.TextOutputView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Vts.SiteVisit.ViewModel"
             VerticalAlignment="Top">
        <Grid Background="White">
            <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Visible" Height="100"  MaxWidth="1000">
                <TextBlock Text="{Binding Text}" MinHeight="100" MinWidth="1000"/>
            </ScrollViewer>
        </Grid>
</UserControl>
